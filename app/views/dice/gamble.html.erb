<html>
	<body>
		<h2>丁半ゲーム</h2>
		<% form_tag do %>
			<%= select_tag(:expected,options_for_select(%W{ 丁 半},params[:expected]))%>
			<%= submit_tag "勝負" %>
		<% end %>

		<% unless @result.nil? -%>
			<% if @result == :win -%>
				あなたの勝ちです。
			<% else -%>
				あなたの負けです。
			<% end -%>
			<p>
			サイコロ１：<%= @values[0] %>
			</p>
			<p>
			サイコロ２：<%= @values[1] %>
			</p>
			<p>
			結果：<%= @chouhan %>
			</p>
		<% end -%>
	</body>
</html>

